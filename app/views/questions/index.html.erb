<div class="jumbotron">
  <h1>Questions</h1>
</div>

<div class="card-deck">
  <% @questions.each do |question, index| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Question #<%= index %></h5>
        <p class="card-text"><%= question.question %></p>
        <%= link_to 'See Responses', question_answers_path(question) %>
        <%= link_to 'Add Response', new_question_answer_path(question) %>
      </div>
    </div>
  <% end %>
</div>
