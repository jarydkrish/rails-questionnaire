<div class="jumbotron">
  <h1>Responses</h1>
</div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to 'Show', question_answer_path(answer) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(@question, answer) %></td>
        <td><%= link_to 'Destroy', question_answer_path(@question, answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Response', new_question_answer_path(@question) %>
